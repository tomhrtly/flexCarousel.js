{
  "name": "flexcarouseljs",
  "version": "0.2.1",
  "description": "A simple, lightweight Flexbox carousel jQuery plugin.",
  "scripts": {
    "build": "npm-run-all css js",
    "css": "npm-run-all --parallel css-src css-docs",
    "css-docs": "npm-run-all css-lint-docs css-compile-docs css-minify-docs",
    "css-src": "npm-run-all css-lint-src css-compile-src css-minify-src",
    "css-compile-docs": "node-sass --output-style expanded --source-map true --source-map-contents true docs/assets/src/sass/style.sass docs/assets/dist/css/style.css",
    "css-compile-src": "node-sass --output-style expanded --source-map true --source-map-contents true src/flexCarousel.sass dist/flexCarousel.css",
    "css-lint-docs": "stylelint 'docs/assets/src/sass/*.sass'",
    "css-lint-src": "stylelint 'src/*.sass'",
    "css-minify-docs": "cleancss -o dist/flexCarousel.min.css dist/flexCarousel.css",
    "css-minify-src": "cleancss -o docs/assets/dist/css/style.min.css docs/assets/dist/css/style.css",
    "lint": "npm-run-all *-lint-*",
    "jekyll": "cd docs && bundle exec jekyll serve --config _config.local.yml",
    "js": "npm-run-all --parallel js-src js-docs",
    "js-docs": "npm-run-all js-lint-docs js-compile-docs js-minify-docs",
    "js-src": "npm-run-all js-lint-src js-compile-src js-minify-src",
    "js-compile-docs": "rollup --environment BUNDLE:false --config build/rollup.docs.config.js --sourcemap",
    "js-compile-src": "rollup --environment BUNDLE:false --config build/rollup.src.config.js --sourcemap",
    "js-lint-docs": "stylelint 'docs/assets/src/js/**/*.js'",
    "js-lint-src": "stylelint 'src/*.js'",
    "js-minify-docs": "terser --compress --comments all --output docs/assets/dist/js/script.min.js docs/assets/dist/js/script.js",
    "js-minify-src": "terser --compress --comments all --output dist/flexCarousel.min.js dist/flexCarousel.js",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-docs": "nodemon --watch docs/assets/src/sass/ --ext sass --exec 'npm run css-docs'",
    "watch-css-src": "nodemon --watch src/ --ext sass --exec 'npm run css-src'",
    "watch-js-docs": "nodemon --watch docs/assets/src/js/ --ext js --exec 'npm run js-docs'",
    "watch-js-src": "nodemon --watch src/ --ext js --exec 'npm run js-src'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomhrtly/flexCarousel.js.git"
  },
  "author": "Tom Hartley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomhrtly/flexCarousel.js/issues"
  },
  "homepage": "https://github.com/tomhrtly/flexCarousel.js#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.4.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-terser": "^4.0.4",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0"
  }
}